package string;

public class ReverseEachWord {
	public static void main(String[] args) {
		String str = "Hello World Java";
		String rev = "";
		String word = "";

		for (int i = 0; i < str.length(); i++) {
			char ch = str.charAt(i);
			if (ch != ' ') {
				word += ch;
			} else {
				rev += word + " ";
				word = "";
			}

		}
		rev += word;

		System.out.println("Reversed each word: " + rev);
	}
}
